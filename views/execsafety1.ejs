                                          <input type="NumRegVols" class="form-control" name="<%= 'NumRegVols'+i %>" readonly value="<%= records[i].NumRegVols %>">
                                        </div>
                                      </td>

                                      <td>
                                       <div class="form-group">
                                          <input type="NumSpecVols" class="form-control" name="<%= 'NumSpecVols'+i %>" readonly value="<%= records[i].NumSpecVols %>">
                                        </div>
                                      </td>

