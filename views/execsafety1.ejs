                                </thead>
                                <tbody>
                                  <% for(var i=0; i<records.length; i++) {%>
                                    <tr>

                                      <td>
                                        <div class="form-group">
                                            <input type="date" class="form-control" name="<%= 'date'+i %>" readonly value="<%= records[i].date %>">
                                        </div>
                                      </td>

                                      <td>
                                        <div class="form-group">
                                            <input type="shifthrs" class="form-control" name="<%= 'shifthrs'+i %>" readonly value="<%= records[i].shifthrs %>">
                                        </div>
                                      </td>

                                      <td>
                                        <div class="form-group">
                                            <input type="product" class="form-control" name="<% 'product'+i %>" readonnly value="<%= records[i].product %>">

                                      <td>
                                        <div class="form-group">
                                            <input type="NumRegMeals" class="form-control" name="<%= 'NumRegMeals'+i %>" readonly value="<%= records[i].NumRegMeals %>">
                                        </div>
                                      </td>

                                      <td>
                                        <div class="form-group">
                                            <input type="cong" class="form-control" name="<%= 'cong'+i %>" readonly value="<%= records[i].cong %>">
                                        </div>
                                      </td>

                                      <td>
                                        <div class="form-group">
                                            <input type="ind" class="form-control" name="<%= 'ind'+i %>" readonly value="<%= records[i].ind %>">
                                        </div>
                                      </td>

                                      <td>
                                       <div class="form-group">
                                          <input type="shiftman" class="form-control" name="<%= 'shiftman'+i %>" readonly value="<%= records[i].shiftman %>">
                                        </div>
                                      </td>

                                      <td>
                                       <div class="form-group">
                                          <input type="NumSpecMeals" class="form-control" name="<%= 'NumSpecMeals'+i %>" readonly value="<%= records[i].NumSpecMeals %>">
                                        </div>
                                      </td>

                                      <td>
