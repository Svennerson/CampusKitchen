                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Today's Date</th>
                                        <th>Shift Hours</th>
                                        <th>Product</th>
                                        <th># of Regular Meals Delivered</th>
                                        <th>Congregate</th>
