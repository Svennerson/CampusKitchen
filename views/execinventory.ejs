  <div class="col-lg-12 text-center">
  <br>
  <h1>Executive: Inventory</h1>
  <br>
  </div>
  <table class="table table-hover table table-sm">
    <thead>
      <tr>
          <th>#</th>
          <th>Item name</th>
          <th>Quantity</th>
          <th>Units</th>
          <th>Date</th>
          <th>Log</th>
      </tr>
  </thead>
  <tbody>
    <% for(var i=0; i<records.length; i++) {%>
      <tr>
        <th scope="row"><%=i+1%></th>
        <td><i class="fa fa-flag fa-fw"></i><span class="network-name"><%= records[i].item %></span></td>
        <td><span><%= records[i].quantity %></span></td>
        <td><span><%= records[i].units %></span></td>
        <td><span><%= records[i].date %></span></td>
        <td><span><%= records[i].mylog %></span></td>
    </tr>
  <% } %>
</tbody>
</table>
